{
  "name": "data-server",
  "version": "1.0.0",
  "description": "Data-server for SlimDreams application",
  "main": "src/server.js",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "scripts": {
    "test": "dotenv -e .env.test c8 --reporter=text mocha 'test/**/*.test.js' --exit || exit 0",
    "test:unit": "dotenv -e .env.test c8 --reporter=text mocha 'test/unit/**/*.test.js' --exit || exit 0",
    "test:scen": "dotenv -e .env.test c8 --reporter=text mocha 'test/scenario/*.test.js' --exit || exit 0",
    "start": "node src/server.js",
    "dev": "nodemon --inspect --env-file=.env src/server.js",
    "lint": "npx eslint ./ || exit 0",
    "lint:fix": "npx eslint ./ --fix || exit 0"
  },
  "author": "Julia Lind <jl225vf@student.lnu.se>",
  "license": "ISC",
  "devDependencies": {
    "@lnu/eslint-config": "^1.1.10",
    "c8": "^10.1.3",
    "chai": "^4.3.10",
    "chai-as-promised": "^8.0.1",
    "chai-http": "^4.4.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^46.10.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "jsdom": "^26.0.0",
    "nodemon": "^3.1.9",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "xml2js": "^0.6.2"
  },
  "eslintConfig": {
    "extends": "@lnu"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "validator": "^13.15.0"
  }
}
